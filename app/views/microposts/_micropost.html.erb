<div class='card' id="micropost-<%= micropost.id %>">
	<div class='left'>
		<span><%= link_to gravatar_for(micropost.account.email, size: 50),	  micropost.account, class: 'subtle-link' %></span>
		<span><%= link_to micropost.account.display_name,					  micropost.account, class: 'subtle-link' %></span>
	</div>
	<div class='right'>
		<h2><%= micropost.content %></h2>
		<%= image_tag micropost.picture.url if micropost.picture? %>
		<p>
			Posted <%= time_ago_in_words(micropost.created_at) %> ago.
		</p>
		<% if current_account?(micropost.account) %>
			<%= link_to "Delete", micropost, method: :delete,
											 data: { confirm: "are you sure?" },
											 class: 'subtle-link' %>
		<% else %>
			<% if current_account.favourited?(micropost) %>
        		<%= form_for(current_account.favourite_posts.find_by(micropost_id: micropost.id),
					html: { method: :delete },
					remote: true ) do |f| %>
    				<%= f.submit "Unfavourite", class: 'subtle-submit'%>
				<% end %>
    		<% else %>
				<%= form_for(current_account.favourite_posts.build, remote: true) do |f| %>
    				<%= hidden_field_tag :micropost_id, micropost.id %>
    				<%= f.submit "Favourite", class: 'subtle-submit'%>
				<% end %>
    		<% end %>
		<% end %>
	</div>
</div>