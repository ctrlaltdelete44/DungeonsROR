<% provide(:title, "Reset Password") %>


  <div class='card'>
    <%= form_for(@account, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= hidden_field_tag :email, @account.email %>
    
      <%= f.label :password, class: 'primary center f4 pt5'%>
      <%= f.password_field :password, class: 'w-100 f4 center tc mb4' %>

      <%= f.label :password_confirmation, "Confirm password", class: 'primary center f4 pt5' %>
      <%= f.password_field :password_confirmation, class: 'w-100 f4 center tc' %>

      <%= f.submit "Update password", class: 'w-90 mt4 mb2 center f4'%>
   <% end %>

  </div>
