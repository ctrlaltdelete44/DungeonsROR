<header class='w-90-ns center mb2 br2 shadow-1 p2 tc flex justify-around-ns bg-primary'>
    <%= link_to "Home", root_path, class: "white link-hover-darken f2" %>
    <%= link_to "About", about_path, class: "white link-hover-darken f2"  %>
    <%= link_to "Help", help_path, class: "white link-hover-darken f2"  %>
    <% if logged_in? %>
        <%= link_to "Profile", current_account, class: "white link-hover-darken f2" %>
        <%= link_to "Settings", edit_account_path(current_account), class: "white link-hover-darken f2" %>
        <%= link_to "Accounts", accounts_path, class: "white link-hover-darken f2" %>
        <%= link_to "Log out", logout_path, method: :delete, class: "white link-hover-darken f2" %>
    <% else %>
        <%= link_to "Login", login_path, class: "white link-hover-darken f2"  %>
    <% end %>
</header>
