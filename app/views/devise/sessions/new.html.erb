<% provide(:title, 'Sign in') %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'primary center f4 mt5' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100 f4 center tc mb4' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'primary center f4 pt5' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'w-100 f4 center tc mb4' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
