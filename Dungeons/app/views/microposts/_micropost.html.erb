<div class='card' id="micropost-<%= micropost.id %>">
	<div class='left'>
		<span><%= link_to gravatar_for(micropost.account.email, size: 50),	  micropost.account, class: 'subtle-link' %></span>
		<span><%= link_to micropost.account.display_name,					  micropost.account, class: 'subtle-link' %></span>
	</div>
	<div class='right'>
		<h2 class='content'><%= micropost.content %></h2>
		<p class='timestamp'>
			Posted <%= time_ago_in_words(micropost.created_at) %> ago.
		</p>
	</div>
</div>