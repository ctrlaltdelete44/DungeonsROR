<div class='card' id="micropost-<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.account.email, size: 50),	  micropost.account %>
	<span class='account'><%= link_to micropost.account.display_name, micropost.account %></span>
	<span class='content'><%= micropost.content %></span>
	<span class='timestamp'>
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.
	</span>
</div>