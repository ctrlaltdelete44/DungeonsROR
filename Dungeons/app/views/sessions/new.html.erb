<% provide(:title, "Log In") %>

<div class='root'> <br>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, class: 'title' %>
      <%= f.text_field :email, class: 'text-input' %> <br>
      
      <%= f.label :password, class: 'title' %>
	  <%= link_to "(forgot password?)", new_password_reset_path, class: 'text-content' %>
      <%= f.password_field :password, class: 'text-input' %> <br>

	  

      <%= f.label :remember_me, class: 'text-content' do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: 'button-input' %>
    <% end %>
    <%= link_to "Sign Up", signup_path, class: "link" %>
	
</div>
