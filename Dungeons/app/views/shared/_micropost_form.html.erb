<%= form_for @micropost do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.text_area(:content, placeholder: "Compose new micropost...", :size => '30x5') %>
	<%= f.submit "Post", class: "subtle-submit" %>
	<%= f.file_field :picture, accept: 'image/jpeg, image/giv, image/png', class: 'subtle-submit' %>

<% end %>

<script type ='text/javascript'>
	$('#micropost_picture').bind('change', function() {
		var size_mb = this.files[0].size/1024/1024;
		if (size_mb > 5) {
			alert('Maximum file size is 5MB. Please choose a smaller file.');
		}
	});
</script>